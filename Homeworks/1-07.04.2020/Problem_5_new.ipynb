    "def binary_sum(a):\n",
    "    a = int(\"{0:b}\".format(a))\n",
    "    sum_a = 0\n",
    "    while a:\n",
    "        sum_a+=a%10\n",
    "        a//=10\n",
    "        \n",
    "    return sum_a\n",
    "\n",
    "binary_sum(7)"
   ]
